    <link href="css/admin.css" rel="stylesheet" type="text/css">


</head>

<body>
<nav class="navbar navbar-default">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar"
                    aria-expanded="false" aria-controls="navbar">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="#">EnergyApp</a>
        </div>
        <div id="navbar" class="collapse navbar-collapse">

            <ul class="nav navbar-nav navbar-right">
                <li class="active"><a>Hola, {{name}}</a></li>
                <li><a href="/logout">Cerrar Sesion</a></li>

            </ul>
        </div><!--/.nav-collapse -->
    </div>
</nav>


<header id="header">
    <div class="container">
        <div class="row">
            <div class="col-md-10">
                <h1><span class="glyphicon glyphicon-cog" aria-hidden="true"></span> Panel de control
                </h1>
            </div>
        </div>
    </div>
</header>
<br>

<section id="breadcrumb">
    <div class="container">
        <ol class="breadcrumb">
            <li class="active">Dashboard</li>
        </ol>
    </div>
</section>


<section id="main">
    <div class="container">
        <div class="row">
            <div class="col-md-3">
                <div class="list-group">
                    <a href="/administrador/{{id}}/dispositivos" class="list-group-item"><span
                            class="glyphicon glyphicon-list-alt" aria-hidden="true"></span> Dispositivos <span></span></a>
                    <a href="/administrador/{{id}}/hogares" class="list-group-item"><span
                            class="glyphicon glyphicon-home" aria-hidden="true"></span> Hogares <span></span></a>

                </div>

            </div>
            <div class="col-md-9">

                    {{#block "adminBody"}}

                    {{/block}}

                    {{#if saludo}}
                <h4>{{name}}, bienvendio al sistema de gestion de EnergyApp</h4>
                    {{/if}}
            </div>

        </div>
    </div>
    </div>
</section>


<footer id="footer">
    <p>EneryApp<br>2018</p>
</footer>
